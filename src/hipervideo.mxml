<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" initialize="fillTextArea()" >
	
	<mx:Script>
		<![CDATA[
			import br.com.caelum.hipervideo.links.Link;
			import br.com.caelum.hipervideo.links.XMLReader;
			import mx.controls.Alert;
		
			private function fillTextArea():void {
				textarea.text = ""
			}
		
			private function parseXML():void {
				var links:Array = new XMLReader(new XML(textarea.text)).extract();
				for each (var link:Link in links) {
					Alert.show(link.content);
				}
			}
		
		]]>
	</mx:Script>
	
	<mx:VBox>
		<mx:TextArea id="textarea" width="300" height="400" />
		<mx:Button width="300" label="Action!" click="parseXML()" />		
	</mx:VBox>
	
</mx:Application>
